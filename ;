{
	write(2, stderr_msg, ft_strlen(stderr_msg));
}
*/

void	err_writeStdErr(char *stderr_msg[], int n)
{
	while (n)
	{
		write(2, *stderr_msg, ft_strlen(*stderr_msg));
		stderr_msg ++;
		n--;
	}
}
